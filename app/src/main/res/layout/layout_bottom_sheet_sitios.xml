<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_sitio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_shet_sitios"
    tools:context=".IndexCliente">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Informacion del sitio"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#B6B6B6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="20dp"
            android:id="@+id/imagen_sitio"
            android:src="@drawable/loginn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_nombre_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del sitio"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_direccion_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion del sitio"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txt_descripcion_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion del sitio"
                android:textColor="#000000"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#B6B6B6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="12dp">
        
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_favoriteee"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:text="AÃ±adir a favoritos"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>